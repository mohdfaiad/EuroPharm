<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.view.RequestDrugsActivity">

>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    android:layoutDirection="rtl"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" بيانات الصنف"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="40sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_request_drugname"
        android:hint="أدخل اسم الصنف"
        android:maxLines="1"
        android:lines="1"
        android:singleLine="true"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_request_formulation"
        android:hint="أدخل الشكل الدوائى"
        android:layoutDirection="rtl"
        android:maxLines="1"
        android:lines="1"
        android:singleLine="true"
        android:layout_marginTop="8dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_request_conc"
        android:hint="أدخل تركيز الصنف إن وجد "
        android:maxLines="1"
        android:lines="1"
        android:singleLine="true"
        android:layout_marginTop="8dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_request_company"
        android:hint="أدخل اسم الشركة المصنعة"
        android:maxLines="1"
        android:lines="1"
        android:singleLine="true"
        android:layout_marginTop="8dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_request_price"
        android:hint="أدخل سعر الصنف"
        android:maxLines="1"
        android:lines="1"
        android:singleLine="true"
        android:layout_marginTop="8dp"
        android:inputType="numberDecimal"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="طلب توفير الصنف"
        android:id="@+id/btn_request_drug"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        />

</LinearLayout>
</ScrollView>